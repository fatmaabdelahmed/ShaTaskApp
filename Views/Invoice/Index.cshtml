@model IEnumerable<ShaTaskApp.Models.InvoiceHeader>

@{
    ViewData["Title"] = "الفواتير";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-file-invoice"></i>
                        إدارة الفواتير
                    </h3>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <a asp-action="Create" class="btn btn-success">
                            <i class="fas fa-plus"></i>
                            إضافة فاتورة جديدة
                        </a>
                    </div>

                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>رقم الفاتورة</th>
                                        <th>اسم العميل</th>
                                        <th>التاريخ</th>
                                        <th>الفرع</th>
                                        <th>الكاشير</th>
                                        @* <th>الأصناف</th> *@
                                        <th>إجمالي المبلغ</th>
                                        <th>العمليات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong class="text-primary">#@item.ID</strong>
                                            </td>
                                            <td>
                                                <i class="fas fa-user"></i>
                                                @Html.DisplayFor(modelItem => item.CustomerName)
                                            </td>
                                            <td>
                                                <i class="fas fa-calendar"></i>
                                                @item.Invoicedate.ToString("dd/MM/yyyy")
                                            </td>
                                            <td>
                                                <i class="fas fa-store"></i>
                                                @if (item.Cashier?.Branch != null)
                                                {
                                                    @Html.DisplayFor(modelItem => item.Cashier.Branch.BranchName)
                                                }
                                                else
                                                {
                                                    <span class="text-muted">غير محدد</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.Cashier != null)
                                                {
                                                    <i class="fas fa-user-tie"></i>
                                                    @Html.DisplayFor(modelItem => item.Cashier.CashierName)
                                                }
                                                else
                                                {
                                                    <span class="text-muted">غير محدد</span>
                                                }
                                            </td>
                                            @* <td>
                                                @if (item.InvoiceDetails.Any())
                                                {
                                                    <div class="items-preview">
                                                        @if (item.InvoiceDetails.Count == 1)
                                                        {
                                                            <span class="badge bg-info">
                                                                @item.InvoiceDetails.First().ItemName
                                                                (@item.InvoiceDetails.First().ItemCount)
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-secondary">
                                                                @item.InvoiceDetails.Count أصناف
                                                            </span>
                                                            <div class="items-detail mt-1" style="font-size: 0.8em;">
                                                                @foreach (var detail in item.InvoiceDetails.Take(2))
                                                                {
                                                                    <div class="text-muted">
                                                                        • @detail.ItemName (@detail.ItemCount × @detail.ItemPrice.ToString("C"))
                                                                    </div>
                                                                }
                                                                @if (item.InvoiceDetails.Count > 2)
                                                                {
                                                                    <div class="text-muted">
                                                                        ... و @(item.InvoiceDetails.Count - 2) أصناف أخرى
                                                                    </div>
                                                                }
                                                            </div>
                                                        }
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">لا توجد أصناف</span>
                                                }
                                            </td> *@
                                            <td>
                                                <strong class="text-success fs-5">
                                                    @{
                                                        var totalPrice = item.InvoiceDetails?.Sum(d => d.TotalPrice) ?? 0;
                                                    }
                                                    @totalPrice.ToString("#,##0.00") ج.م
                                                </strong>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.ID" 
                                                       class="btn me-1" title="عرض التفاصيل">
                                                        <i class="fa-solid fa-eye" style="color: #74C0FC;"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.ID" 
                                                       class="btn me-1" title="تعديل">
                                                        <i class="fa-solid fa-pen-to-square" style="color: #FFD43B;"></i>
                                                    </a>
                                                    
                                                    <button type="button" 
                                                        class="btn delete-btn"
                                                        style="border:none; background:none"

                                                        data-id="@item.ID" title="حذف">
                                                      
                                                        <i class="fa-solid fa-trash" style="color: #e00000;"></i>
                                                    </button>



                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-3 p-3 bg-light rounded">
                            <div class="row">
                                <div class="col-md-6">
                                    <h5>إحصائيات سريعة:</h5>
                                    <p class="mb-1">
                                        <i class="fas fa-file-invoice"></i>
                                        إجمالي الفواتير: <strong>@Model.Count()</strong>
                                    </p>
                                    <p class="mb-0">
                                        <i class="fas fa-money-bill-wave"></i>
                                        إجمالي المبيعات: 
                                        <strong>
                                            @{
                                                var totalSales = Model.Sum(i => i.InvoiceDetails?.Sum(d => d.TotalPrice) ?? 0);
                                            }
                                            @totalSales.ToString("#,##0.00") ج.م
                                        </strong>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="mb-3">
                                <i class="fas fa-file-invoice fa-3x text-muted"></i>
                            </div>
                            <h4 class="text-muted">لا توجد فواتير</h4>
                            <p class="text-muted">ابدأ بإضافة فاتورة جديدة</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i>
                                إضافة فاتورة جديدة
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .items-preview {
        max-width: 200px;
    }
    
    .items-detail {
        max-height: 100px;
        overflow-y: auto;
    }
    
    .table th {
        white-space: nowrap;
        vertical-align: middle;
    }
    
    .table td {
        vertical-align: middle;
    }
    
    .btn-group .btn {
        margin: 0 1px;
    }
    
    .badge {
        font-size: 0.8em;
    }
</style>
<script>
    document.querySelectorAll('.delete-btn').forEach(button => {
        button.addEventListener('click', function () {
            const invoiceId = this.getAttribute('data-id');

            Swal.fire({
                title: 'هل أنت متأكد؟',
                text: "لا يمكنك التراجع بعد الحذف!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'نعم، احذفها',
                cancelButtonText: 'إلغاء',
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = `/Invoice/DeleteConfirmed/${invoiceId}`;

                }
            });
        });
    });

    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('deleted') === 'true') {
        Swal.fire({
            icon: 'success',
            title: 'تم الحذف',
            text: 'تم حذف الفاتورة بنجاح',
            timer: 2000,
            showConfirmButton: false
        });
    }
</script>
